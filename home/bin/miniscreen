#!/usr/bin/env bash
# TODO: Look into wl-present https://man.archlinux.org/man/wl-present.1.en
set -x

swaymsg create_output
OUTPUT=$(swaymsg -r -t get_outputs | jq '.[].name' | grep HEADLESS | tr -d '"')

function cleanup() {
  swaymsg output "$OUTPUT" unplug
}
trap cleanup EXIT

wl-mirror "$OUTPUT"

# Notes:
